    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Program",
            "type": "node",
            "request": "launch",
            "sourceMaps": true,
            "cwd": "${workspaceFolder}/build/",
            "program": "${workspaceFolder}/build/app.js",
            "preLaunchTask": "npm: build",
            "outputCapture": "std",
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "Mocha All",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "--no-timeouts", "--colors",
                // according to https://github.com/istanbuljs/istanbuljs/tree/master/packages/nyc-config-typescript
                "--require", "ts-node/register", "--recursive",
                "--exit",
                "${workspaceFolder}/src/**/*.test.ts",
                "${workspaceFolder}/test/**/*.ts"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "Mocha Current File",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "--no-timeouts", "--colors",
                // according to https://github.com/istanbuljs/istanbuljs/tree/master/packages/nyc-config-typescript
                "--require", "ts-node/register", "--recursive",
                "--exit",
                "${workspaceFolder}/**/${fileBasenameNoExtension}.ts"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}