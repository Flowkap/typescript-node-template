    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Program",
            "type": "node",
            "request": "launch",
            "sourceMaps": true,
            "cwd": "${workspaceFolder}/build/",
            "program": "${workspaceFolder}/build/src/app.js",
            "preLaunchTask": "npm: build",
            "outputCapture": "std",
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "Mocha All",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "--require source-map-support/register",
                "--timeout",
                "999999",
                "--colors",
                "--exit",
                "${workspaceFolder}/build/**/*.test.js",
                "${workspaceFolder}/build/test/**/*.js"
            ],
            "sourceMaps": true,
            "preLaunchTask": "npm: build",
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "Mocha Current File",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "--require source-map-support/register",
                "--timeout",
                "999999",
                "--colors",
                "--exit",
                "${workspaceFolder}/build/**/${fileBasenameNoExtension}.js"
            ],
            "sourceMaps": true,
            "preLaunchTask": "npm: build",
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}