{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2020",
        "lib": ["es2020"],
        "outDir": "build",
        "rootDir": "src",
        "sourceMap": true,
        "strict": true,
        "declaration": true,
        "noUnusedLocals": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "build",
        "gulpfile.js"
    ]
}
